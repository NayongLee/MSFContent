<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft = "10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/whiteButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:enabled="false"/>
        <ImageButton
            android:id="@+id/redButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#DC1EE6"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:enabled="false"/>
        <ImageButton
            android:id="@+id/greenButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#46E6B4"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:enabled="false"/>
        <ImageButton
            android:id="@+id/yellowButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#FFD966"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:enabled="false"/>
        <ImageButton
            android:id="@+id/blueButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#099EFF"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/onevibe"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:src="@drawable/vibeone"
                android:backgroundTint="@color/buttonBackGround"
                android:scaleType="fitCenter"
                android:enabled="false"/>
            <ImageButton
                android:id="@+id/twovibe"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:src="@drawable/vibetwo"
                android:backgroundTint="@color/buttonBackGround"
                android:scaleType="fitCenter"
                android:enabled="false"/>
            <ImageButton
                android:id="@+id/threevibe"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:src="@drawable/vibethree"
                android:backgroundTint="@color/buttonBackGround"
                android:scaleType="fitCenter"
                android:enabled="false"/>
            <ImageButton
                android:id="@+id/fourvibe"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:src="@drawable/vibefour"
                android:backgroundTint="@color/buttonBackGround"
                android:scaleType="fitCenter"
                android:enabled="false"/>
            <ImageButton
                android:id="@+id/infinitevibe"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:backgroundTint="@color/buttonBackGround"
                android:src="@drawable/infinity"
                android:scaleType="fitCenter"
                android:enabled="false"/>
            <ImageButton
                android:id="@+id/nonevibe"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:backgroundTint="@color/buttonBackGround"
                android:scaleType="fitCenter"
                android:src="@drawable/none"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/label"
                android:layout_width = "200dp"
                android:layout_height = "fill_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:typeface="sans"
                android:gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/imgbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <ImageButton
                android:id="@+id/vibebutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>